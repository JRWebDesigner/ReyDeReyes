---
interface Props {
	title: string;
}

const { title } = Astro.props;
import Whatsapp from "../components/whatsapp.astro";
import Header from "../components/CompImportant/Header.astro";
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Rey de Reyes" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="generator" content={Astro.generator} />
		<link
			rel="stylesheet"
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
		/>
		<title>{title}</title>
		<link rel="shortcut icon" href="/Logo.png" type="image/x-icon" />
	</head>
	<body class="">
		<Header />
		<main class="">
			<slot />
			<Whatsapp />
		</main>
		<slot name="footer"/>
		<script
			src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
			integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
			crossorigin="anonymous"></script>
		<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
			integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
			crossorigin="anonymous"></script>
			<script is:inline src="https://cdn.jsdelivr.net/npm/flowbite@2.5.1/dist/flowbite.min.js"></script>
	</body>
</html>
<style is:global>
	.selector-for-some-widget {
		box-sizing: content-box;
	}
	* {
		box-sizing: border-box;
		scroll-behavior: auto !important;
	}
	header,
	footer {
		width: 100%;
	}
	@font-face {
		font-family: "mont";
		src: url("/Fonts/Mont-Bold.ttf");
	}
	@font-face {
		font-family: "poppins";
		src: url("/Fonts/Poppins-Regular.ttf");
	}
	@font-face {
		font-family: "montserrat";
		src: url("/Fonts/Montserrat-Regular.otf");
	}
	@font-face {
		font-family: "montserratBold";
		src: url("/Fonts/Montserrat-Bold.otf");
	}
	@font-face {
		font-family: "Adelia";
		src: url("/Fonts/adelia.ttf");
	}
	body,
	html {
		background-color: #e4e1e1;
	}
	h1 {
		font-family: "montserratBold", "Times New Roman", Times, serif;
		color: #020236;
	}
	strong {
		color: #00002b;
	}
	.subtitle {
		font-family: "montserrat";
		color: #d94a00;
		transition: 1s all;
	}
	p,
	span,
	a {
		margin: 10px;
		font-family: "poppins";
	}
	p {
		font-size: 1.2rem;
		color: rgb(58, 58, 58);
	}
	@media (min-width: 768px) {
		p {
			font-size: 1.5rem;
		}
	}
</style>
<script>
	const title = document.querySelectorAll(".title");
	const options = {
		root: null,
		rootMargin: "0px",
		threshold: 0.5,
	};
	function TitleAnimation(entrys, obserber) {
		entrys.forEach((entry) => {
			if (entry.isIntersecting) {
				if (entry.target.classList.contains("-translate-x-[50%]")) {
					entry.target.classList.remove("-translate-x-[50%]");
				}
			}
		});
	}
	let oberverTitle = new IntersectionObserver(TitleAnimation, options);
	title.forEach((tituo) => {
		oberverTitle.observe(tituo);
	});
</script>
