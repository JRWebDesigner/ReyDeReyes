---
import Layout from "../../layouts/Layout.astro";
---
<Layout title="Rey de Reyes | Cochabamba">
    <div class="my-16">
        <h1 class="text-5xl md:text-7xl font-bold text-center mb-7">Sucursal de Cochabamba</h1>
        <div class="flex flex-wrap md:flex-nowrap justify-center">
            <div>
                <h2 class="subtitle text-center md:text-5xl text-2xl">
                    Materiales
                </h2>
                <div class="relative m-auto overflow-hidden w-[80%] lg:max-w-[1230px]">
                    <div
                      class="flex transition-transform duration-500 ease-in-out"
                      style="transform: translateX(-0%)"
                    >
                      <!-- Slide 1 -->
                      <div class="flex-none w-full">
                        <img
                          src="https://via.placeholder.com/800x400?text=Slide+1"
                          alt="Slide 1"
                          class="w-full h-auto object-cover"
                        />
                      </div>
                      <!-- Slide 2 -->
                      <div class="flex-none w-full">
                        <img
                          src="https://via.placeholder.com/800x400?text=Slide+2"
                          alt="Slide 2"
                          class="w-full h-auto object-cover"
                        />
                      </div>
                      <!-- Slide 3 -->
                      <div class="flex-none w-full">
                        <img
                          src="https://via.placeholder.com/800x400?text=Slide+3"
                          alt="Slide 3"
                          class="w-full h-auto object-cover"
                        />
                      </div>
                    </div>
                    <!-- Navigation buttons -->
                    <button
                      id="prevSlide"
                      class="absolute top-1/2 left-0 transform -translate-y-1/2 bg-white p-2 rounded-full shadow-md"
                    >
                      &#10094;
                    </button>
                    <button
                      id="nextSlide"
                      class="absolute top-1/2 right-0 transform -translate-y-1/2 bg-white p-2 rounded-full shadow-md"
                    >
                      &#10095;
                    </button>
                
                  </div>
            </div>
            <div>
                <h2 class="subtitle text-center md:text-5xl text-2xl">
                    Nuestros Ambientes
                </h2>
                <div class="relative m-auto overflow-hidden w-[80%] lg:max-w-[1230px]">
                    <div
                      class="flex transition-transform duration-500 ease-in-out"
                      style="transform: translateX(-0%)"
                    >
                      <!-- Slide 1 -->
                      <div class="flex-none w-full">
                        <img
                          src="https://via.placeholder.com/800x400?text=Slide+1"
                          alt="Slide 1"
                          class="w-full h-auto object-cover"
                        />
                      </div>
                      <!-- Slide 2 -->
                      <div class="flex-none w-full">
                        <img
                          src="https://via.placeholder.com/800x400?text=Slide+2"
                          alt="Slide 2"
                          class="w-full h-auto object-cover"
                        />
                      </div>
                      <!-- Slide 3 -->
                      <div class="flex-none w-full">
                        <img
                          src="https://via.placeholder.com/800x400?text=Slide+3"
                          alt="Slide 3"
                          class="w-full h-auto object-cover"
                        />
                      </div>
                    </div>
                    <!-- Navigation buttons -->
                    <button
                      id="prevSlide"
                      class="absolute top-1/2 left-0 transform -translate-y-1/2 bg-white p-2 rounded-full shadow-md"
                    >
                      &#10094;
                    </button>
                    <button
                      id="nextSlide"
                      class="absolute top-1/2 right-0 transform -translate-y-1/2 bg-white p-2 rounded-full shadow-md"
                    >
                      &#10095;
                    </button>
                  </div>
            </div>
        </div>
        <p class="text-center px-[15vw] my-16 text-lg">
            <strong>
                "Lorem ipsum dolor sit amet consectetur, adipisicing elit. Optio praesentium eum id vitae debitis dolorum."
            </strong>
        </p>
    </div>
</Layout>