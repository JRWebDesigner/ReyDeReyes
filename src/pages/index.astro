---
import Layout from "../layouts/Layout.astro";
import Present from "../components/CarruselesFotos/Present.astro";
import ListaSucursales from '../components/ListaSucursales.astro'
import ListCarreras from "../components/ListCarreras.astro";
import GaleriaPrincipal from "../components/CarruselesFotos/GaleriaPrincipal.astro";
import ListNoticias from "../components/ListNoticias.astro";
import Titulo from '../components/Titulo.astro'
---

<Layout title="Rey de Reyes | Instituro academico ">
  <div class="w-full h-[70vh] xl:[60vh]">
    <Present />
  </div>
  <div
   class="my-10 flex-col font-semibold flex items-center text-center bg-white p-7 lg:p-14"
  >
    <p class="presentacion scale-75 text-[1rem] md:text-lg xl:text-2xl 2xl:text-4xl">
      ¡Estudia con nosotros! Somos el mejor centro de estudios y cursos en la ciudad
      ¡te esperamos🙂!
    </p>
  </div>
<div class="my-10 w-auto h-auto">
  <h2 class="subtitle text-center text-2xl lg:text-5xl font-bold">
    NUESTRAS CARRERAS
  </h2>
  <div
    class="mb-10 relative w-full  bg-gray-200 p-6 flex justify-center items-center"
  >
  <ListCarreras/>
  </div>
</div>
<div
   class="lg:my-36 flex-col font-semibold flex items-center text-center bg-white px-[2vw] lg:px-[10vw] overflow-hidden"
   >
   <p class="p-Animation -translate-x-[50%] opacity-45 text-[1rem] md:text-lg xl:text-2xl 2xl:text-4xl">
    Creemos que cada individuo es un pilar fundamental en la construcción de una nación más fuerte y próspera. Por eso en Rey de Reyes atravez de la educación, la responsabilidad social y el trabajo conjunto,<strong> buscamos crear oportunidades que impulsen el desarrollo y el bienestar de todos los bolivianos</strong>, enriqueciendo nuestro país con <strong>
      innovación y dedicación
    </strong>.
   </p>
   <br>
   <p class="p-Animation translate-x-[50%] opacity-45 text-[1rem] md:text-lg xl:text-2xl 2xl:text-4xl">
    ¡Unidos, construimos el futuro que merecemos! Con <strong>esfuerzo y perseverancia</strong>. Trabajemos juntos para forjar un camino de libertad y crecimiento para las futuras generaciones. Que nuestro amor por la patria sea el motor que nos impulse hacia un horizonte de prosperidad y grandeza
   </p>
</div>
<div class="my-10">
  <h2 class="subtitle text-center text-2xl lg:text-5xl font-bold">
    NUESTRAS SUCURSALES
  </h2>
  <div>
    <ListaSucursales />
  </div>
</div>
  <h2 class="subtitle text-center text-2xl lg:text-5xl font-bold">
    GALERIA DE FOTOS
  </h2>
  <div class="w-full py-2 grid place-items-center m-auto bg-gray-100">
    <GaleriaPrincipal />
  </div>
  
  <h2 class="subtitle text-center text-2xl lg:text-5xl font-bold">
    NOTICIAS
  </h2>
  <ListNoticias />
</Layout>
<style>
  h3 {
    font-weight: 700;
  }
  p{
    transition: 1s all;
  }
  .p-Animation{
    transition: 1s all;
  }
  .save:hover .svg {
    fill: #ced8de;
  }
</style>
<script>
  const parrafos= document.querySelectorAll('.p-Animation')
  const presentacion = document.querySelector('.presentacion')
  const options={
    root: null,
    rootMargin: "0px",
    threshold: 0.5,
  }
  function AnimacionParrafos(entrys,obserber){
    entrys.forEach(entry => {
      if(entry.isIntersecting){
        if(entry.target.classList.contains('translate-x-[50%]')){
          entry.target.classList.remove('translate-x-[50%]')
          entry.target.classList.remove('opacity-45')
        }
        if(entry.target.classList.contains('-translate-x-[50%]')){
          entry.target.classList.remove('-translate-x-[50%]')
          entry.target.classList.remove('opacity-45')
        }
      }
    });
  }
  function PresentacionAnimation(entrys,observe){
    entrys.forEach(entry => {
      if(entry.isIntersecting){
          if(entry.target.classList.contains('scale-75')){
            entry.target.classList.remove('scale-75')
          
          }
        }
    });
  }
  let entryParrafo=new IntersectionObserver(AnimacionParrafos,options)
  parrafos.forEach(parrafo=>{
    entryParrafo.observe(parrafo)
  })
  let obserberPresent = new IntersectionObserver(PresentacionAnimation, options)
  obserberPresent.observe(presentacion)
</script>