<div
  class="flex items-center px-36 justify-start lg:w-[70%]"
>
  <img
    class="ImageLetras z-30 title -translate-x-[50%]"
    src="/Letras1.png"
    alt="letras"
  />
</div>
<style>
  img {
    transition: 1.3s all;
    text-shadow: 0.5px 0.5px 5px rgb(0, 0, 0);
  }
</style>
<script>
  const ImageLetras = document.querySelector(".ImageLetras");
  let i = 1;
  setInterval(() => {
    i++;
    ImageLetras.attributes[1].nodeValue = `/Letras${i}.png`;
    if (i === 1 && ImageLetras.classList.contains("translate-x-[70%]")) {
      ImageLetras.classList.remove("translate-x-[70%]");
      ImageLetras.classList.remove("-translate-x-[50%]");
    }
    if (i === 2) {
      ImageLetras.classList.remove("-translate-x-[50%]");
      ImageLetras.classList.add("translate-x-[70%]");
    }
    if (i === 2) {
      return (i = 0);
    }
  }, 5000);
</script>
