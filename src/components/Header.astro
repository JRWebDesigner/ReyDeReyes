---
import Logo from './Logo.astro'
import Nav from './Nav.astro'
---
<header class="relative w-full min-h-20 md:min-h-32 lg:min-h-36 px-[6vw] bg-gradient-to-l to-orange-600 from-gray-800 flex justify-around z-50 md:justify-around items-center">
    <Logo />
    <nav class="hidden lg:block">
        <ul class="flex gap-10 text-3xl items-center justify-start">
            <Nav />
        </ul>
    </nav>
    <button
        title="menu Rey de Reyes"
        name="button"
        id="buttonNav"
        class="z-30 lg:hidden mt-1 absolute right-7"
    >
        <svg
            xmlns="http://www.w3.org/2000/svg"
            width="35"
            height="35"
            viewBox="0 0 24 24"
            fill="none"
            stroke="#fff"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="icon icon-tabler icons-tabler-outline icon-tabler-menu-2"
            ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                d="M4 6l16 0"></path><path d="M4 12l16 0"></path><path
                d="M4 18l16 0"></path></svg
        >
    </button>
    <nav
        class="block lg:hidden nav-mobile p-4 absolute right-1 rounded-b-lg min-w-[40vw] bg-orange-600 h-[60vh] z-50 rounded-bl-3xl"
    >
        <ul class="w-full h-full flex flex-col justify-center items-center gap-10 text-lg z-50">
           <Nav />
        </ul>
    </nav>
</header>
<style>
    header{
        width: 100% !important;
    }
    svg{
        transition: .4s all;
    }
    .nav-mobile {
        z-index: 40;
        top: -1000%;
        transform: scaleY(0);
        opacity: 0;
        display: hidden;
        transition:
            1s top,
            1s transform,
            1.3s opacity,
            1.3s display;
        z-index: 0 !important;
    }
    #buttonNav:hover ~ .nav-mobile {
        top: 100%;
        opacity: 100;
        transform: scaleY(100%);
        display: block;
    }
    #buttonNav:hover{
        display: hidden;
    }
    .nav-movile{
        color:#831a1a !important;
    }
</style>