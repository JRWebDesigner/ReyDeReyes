  <script>
    const ListaSucursales = document.querySelectorAll('.Sucursales')
    const options={
    root: null,
    rootMargin: "0px",
    threshold: 0.5,
  }
    function escalarSucursal(entrys,observe){
    entrys.forEach(entry => {
      if(entry.isIntersecting){
          if(entry.target.classList.contains('scale-75')){
            entry.target.classList.remove('scale-75')
          
          }
        }
    });
  }
let obserberSucursal = new IntersectionObserver(escalarSucursal, options)
  ListaSucursales.forEach(sucursal=>{
    obserberSucursal.observe(sucursal)
  })
  </script>